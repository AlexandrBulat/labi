<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:agendaCalendar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ffff0000"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data"
            android:id="@+id/data"
            android:layout_marginTop="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="127dp"
            android:layout_marginStart="127dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timeclock"
            android:id="@+id/timeclock"
            android:layout_alignTop="@+id/data"
            android:layout_toRightOf="@+id/data"
            android:layout_toEndOf="@+id/data"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:id="@+id/clock"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/data"
            android:layout_alignEnd="@+id/data"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="upadate"
            android:id="@+id/upadate"
            android:layout_below="@+id/clock"
            android:layout_toRightOf="@+id/timeclock"
            android:layout_toEndOf="@+id/timeclock" />
    </RelativeLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/send" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/listView"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/relativeLayout" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:id="@+id/add"
        android:layout_toRightOf="@+id/send"
        android:layout_toEndOf="@+id/send" />

</RelativeLayout>